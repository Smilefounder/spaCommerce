@inject NavigationManager uriHelper

@code{
    [Parameter]public ProductDetailsModel Model { get; set; }

    protected void Onclick (MouseEventArgs args)
    {
        uriHelper.NavigateTo(Url.RouteUrl("ProductEmailAFriend", new { productId = Model.Id }));
    }
}

@if (Model.EmailAFriendEnabled)
{
    <div class="email-a-friend">
        <input type="button" value="@T("Products.EmailAFriend")" class="button-2 email-a-friend-button" @onclick="@Onclick" />
    </div>
}
