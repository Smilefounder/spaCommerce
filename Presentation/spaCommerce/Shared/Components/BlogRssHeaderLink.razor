@using Nop.Core
@inject Nop.Services.Localization.ILocalizationService localizationService
@inject IStoreContext storeContext
@inject IWebHelper webHelper
@inject IWorkContext workContext
@inject Nop.Core.Domain.Blogs.BlogSettings _blogSettings

@code {

}

@if (!_blogSettings.Enabled || !_blogSettings.ShowHeaderRssUrl)
{
    var link = Url.RouteUrl("BlogRSS", new { languageId = workContext.WorkingLanguage.Id });
    var storeName = localizationService.GetLocalized(storeContext.CurrentStore, x => x.Name);

    <link href="@link" rel="alternate" type="application/rss+xml" title="@storeName: Blog" />
}